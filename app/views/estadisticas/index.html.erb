<p id="notice"><%= notice %></p>

<h1>Listing Estadisticas</h1>

<table>
  <thead>
    <tr>
      <th>Estadistica</th>
      <th>Positivos</th>
      <th>Negativos</th>
      <th>Neutrales</th>
      <th>Suma total</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @estadisticas.each do |estadistica| %>
      <tr>
        <td><%= estadistica.estadistica_id %></td>
        <td><%= estadistica.positivos %></td>
        <td><%= estadistica.negativos %></td>
        <td><%= estadistica.neutrales %></td>
        <td><%= estadistica.suma_total %></td>
        <td><%= link_to 'Show', estadistica %></td>
        <td><%= link_to 'Edit', edit_estadistica_path(estadistica) %></td>
        <td><%= link_to 'Destroy', estadistica, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

